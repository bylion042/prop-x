    <button onclick="closeDetails()">Close </button>
</div>




<script>
    function toggleDetails(element) {
    const toggleBox = document.getElementById("toggle-box");
    const toggleTitle = document.getElementById("toggle-title");
    const toggleContent = document.getElementById("toggle-content");

    // Retrieve the details from the clicked section
    const title = element.querySelector("p").textContent;
    const content = element.nextElementSibling.nextElementSibling.textContent;

    // Update content in the toggle box
    toggleTitle.textContent = title;
    toggleContent.textContent = content;

    // Slide in the toggle box
    toggleBox.style.right = "0";
}

function closeDetails() {
    const toggleBox = document.getElementById("toggle-box");

    // Slide out the toggle box
    toggleBox.style.right = "-300px";
}

</script>